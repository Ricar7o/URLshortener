.row
  .small-12.columns.text-center
    %h1 Shortly

.row
  .small-12.small-centered.large-6.large-centered.columns
    = form_for @link, html: {class: "custom"} do |f|
      .row.collapse
        .small-3.large-3.colums.left
          = select_tag "prefix", options_for_select(["http://", "https://"])
        .small-9.large-9.columns= f.text_field :url, autofocus: true, placeholder: "URL to shorten"
      .row
        .small-6.large-6.columns= f.text_field :title, placeholder: "Alias (no spaces)"
        .small-4.large-4.columns
          = f.submit "Shorten", class: "button prefix"

- unless @links.blank?
  .row
    .small-12.columns
      %table
        %thead
          %tr
            %th Name
            %th URL
            %th Alias
        %tbody
          - @links.each do |link|
            %tr
              %td= link_to link.title, link

.row
  .small-12
    = params
